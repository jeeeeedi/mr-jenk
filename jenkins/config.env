# Jenkins Pipeline Configuration
# This file contains shared configuration values used across the pipeline

# Maven Configuration
MAVEN_HOME=/opt/apache-maven-3.9.9
MAVEN_SKIP_TESTS=-DskipTests

# Node.js Configuration
NODEJS_HOME=/usr/bin

# Chrome Configuration (for Angular/Karma tests)
CHROME_BIN=/usr/bin/google-chrome

# Email Recipients
TEAM_EMAIL=othmane.afilali@gritlab.ax,jedi.reston@gritlab.ax

# Docker Configuration
DOCKER_IMAGE_PREFIX=buy01-pipeline
SERVICE_REGISTRY_IMAGE=${DOCKER_IMAGE_PREFIX}-service-registry
API_GATEWAY_IMAGE=${DOCKER_IMAGE_PREFIX}-api-gateway
USER_SERVICE_IMAGE=${DOCKER_IMAGE_PREFIX}-user-service
PRODUCT_SERVICE_IMAGE=${DOCKER_IMAGE_PREFIX}-product-service
MEDIA_SERVICE_IMAGE=${DOCKER_IMAGE_PREFIX}-media-service
FRONTEND_IMAGE=${DOCKER_IMAGE_PREFIX}-frontend

# Frontend Configuration
FRONTEND_DIR=buy-01-ui
FRONTEND_BROWSERS=ChromeHeadless

# Test Configuration
JUNIT_REPORT_PATH=**/target/surefire-reports/*.xml

# Timeout Configuration (in minutes)
BACKEND_BUILD_TIMEOUT=30
BACKEND_TEST_TIMEOUT=30
FRONTEND_BUILD_TIMEOUT=20
FRONTEND_TEST_TIMEOUT=20
DOCKER_BUILD_TIMEOUT=45
DEPLOYMENT_TIMEOUT=30
